<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_poli" />

    <Button
        android:id="@+id/button_calendarioAcademico"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_marginTop="60dp"
        android:text="Calendario Academico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button_actividadesBienestar"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:text="Actividades de Bienestar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_calendarioAcademico" />

    <Button
        android:id="@+id/button_consultaCreditos"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:text="Consulta de Creditos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_actividadesBienestar" />


    <Button
        android:id="@+id/button_consultaSem"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:text="Consulta de Semilleros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_consultaCreditos" />

    <Button
        android:id="@+id/button_consultaHora"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:text="Consulta tu Horario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_consultaSem" />

    <Button
        android:id="@+id/button_logOut"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:text="Log Out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_consultaHora" />



</android.support.constraint.ConstraintLayout>